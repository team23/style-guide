{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@team23/eslint-config-team23-angular": ["libs/angular/src/index.ts"],
            "@team23/eslint-config-team23-standard": ["libs/java-script/src/index.ts"],
            "@team23/eslint-config-team23-ts": ["libs/type-script/src/index.ts"],
            "@team23/eslint-config-team23-vue": ["libs/vue/src/index.ts"],
            "angular": ["libs/angular/src/index.ts"],
            "java-script-standard": ["libs/java-script/src/index.ts"],
            "type-script": ["libs/type-script/src/index.ts"],
            "vue": ["libs/vue/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
